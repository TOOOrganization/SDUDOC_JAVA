<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--本地的数据库连接驱动地址-->
    <classPathEntry
            location="F:/Downloads/jar/mysql-connector-java-8.0.23.jar"/>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="mergeable" value="false"/>


        <commentGenerator>
            <property name="suppressAllComment" value="true"/><!--是否取消注释-->
            <property name="suppressData" value="true"/><!--是否生成注释代时间戳-->
        </commentGenerator>
        <!--数据库连接地址-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/sdudoc?characterEncoding=UTF-8&amp;nullCatalogMeansCurrent=true"
                        userId="root"
                        password="123456">
        </jdbcConnection>
        <!--类型转换-->
        <javaTypeResolver>
            <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>
        <!--生成实体类（注意修改包路径）-->
        <javaModelGenerator targetPackage="cn.edu.sdu.sdudocdoc.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!--生成mapper.xml-->
        <sqlMapGenerator targetPackage="./mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--生成mapper.java（注意修改包路径）-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="cn.edu.sdu.sdudocdoc.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--数据库中的表名称和对应的实体类名称-->
        <!--book表-->
        <table schema="sdudoc" tableName="book" domainObjectName="Book"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               enableSelectByPrimaryKey="true" enableUpdateByPrimaryKey="true"
               enableDeleteByPrimaryKey="true">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="uid" sqlStatement="MySql" identity="true"/>
        </table>
<!--        user-->
        <table schema="sdudoc" tableName="user" domainObjectName="User"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               enableSelectByPrimaryKey="true" enableUpdateByPrimaryKey="true"
               enableDeleteByPrimaryKey="true">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="uid" sqlStatement="MySql" identity="true"/>
        </table>
<!--        img-->
        <table schema="sdudoc" tableName="img" domainObjectName="Img"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               enableSelectByPrimaryKey="true" enableUpdateByPrimaryKey="true"
               enableDeleteByPrimaryKey="true">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>